
<h2><%= l(:label_people_leave_type_edit) %></h2>

<%= labelled_form_for @leave_type, url: leave_type_path(@leave_type), html: { id: 'leave_type', multipart: true } do |f| %>
  <%= error_messages_for 'leave_type' %>
  <div class="box tabular">
    <div id="all_attributes">
      <%= render partial: 'form', locals: { f: f } %>
    </div>
  </div>

  <%= submit_tag l(:button_save) %>
<% end %>
