<h2><%=l(:label_announcement)%></h2>

<%= labelled_form_for(@note, :method => "PUT") do |f|%>
  <div class="box tabular">
      <%= render :partial => 'form', :locals => { :f => f} %>
  </div>
<fieldset>
  <legend><%= l(:label_attachment_plural) %></legend>
  <%= link_to_attachments @note %>
  <p><%= render :partial => 'attachments/form', :locals => {:container => f.object} %></p>
</fieldset>  
  <p class='crm_pull_right'>
    <%= f.submit l(:button_save) %>
    <%= link_to_function(l(:label_preview), "showAnnouncement('#{preview_people_announcements_path}');") %>
  </p>
<% end %>
<div id="announcement-show" style="display:none;"></div>

<% content_for :header_tags do %>
  <%= javascript_include_tag :redmine_people, :plugin => 'redmine_people'  %>
<% end %>
